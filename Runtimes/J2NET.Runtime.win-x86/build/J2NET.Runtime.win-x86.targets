<Project>
    <ItemGroup>
        <OpenJRE Include="$(MSBuildThisFileDirectory)..\openjre\**\*.*" />
    </ItemGroup>

    <Target Name="CopyRuntime" BeforeTargets="PreBuildEvent">
        <Copy SourceFiles="@(OpenJRE)" DestinationFolder="$(OutputPath)\runtimes\win-x86\%(RecursiveDir)" SkipUnchangedFiles="true" />
    </Target>

    <Target Name="PublishRuntime" AfterTargets="ComputeFilesToPublish">
        <ItemGroup>
            <ResolvedFileToPublish Include="@(OpenJRE->'%(FullPath)')" Exclude="@(ResolvedFileToPublish)">
                <RelativePath>runtimes\win-x86\%(RecursiveDir)%(Filename)%(Extension)</RelativePath>
                <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
            </ResolvedFileToPublish>
        </ItemGroup>
    </Target>
</Project>
